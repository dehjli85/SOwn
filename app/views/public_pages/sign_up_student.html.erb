<div class="container-fluid">

	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="center">
				<h4>Get Started as a Student!</h4>
			</div>
			<%= form_for :student_user, url: '/student_users', html: {class: 'form-horizontal', method:'post'} do |f| %>

				<div class="form-group <%= !@student_user.errors[:first_name].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">First Name:</label>
					<div class="col-md-9">
						<%= f.text_field :first_name, {:class=>'form-control', placeholder: 'Jane', id: 'inputFirstName'} %>
						<% if @student_user.errors[:first_name] %>
              <% @student_user.errors[:first_name].each do |error| %>
                <label class="control-label" for="inputFirstName">First Name <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				<div class="form-group <%= !@student_user.errors[:last_name].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">Last Name:</label>
					<div class="col-md-9">
						<%= f.text_field :last_name, {:class=>'form-control', placeholder: 'Doe', id: 'inputLastName'} %>
						<% if @student_user.errors[:last_name] %>
              <% @student_user.errors[:last_name].each do |error| %>
                <label class="control-label" for="inputLastName">Last Name <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				
				<div class="form-group <%= !@student_user.errors[:email].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">Email:</label>
					<div class="col-md-9">
						<%= f.email_field :email, {:class=>'form-control', placeholder: 'johndoe@example.com', id: 'inputEmail'} %>
						<% if @student_user.errors[:email] %>
              <% @student_user.errors[:email].each do |error| %>
                <label class="control-label" for="inputEmail">Email <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				<div class="form-group <%= !@student_user.errors[:password].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">Password:</label>
					<div class="col-md-9">
						<%= f.password_field :password, {:class=>'form-control', placeholder: '*****', id: 'inputPassword'} %>
						<% if @student_user.errors[:password] %>
              <% @student_user.errors[:password].each do |error| %>
                <label class="control-label" for="inputPassword">Password <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				<div class="form-group">					
					<div class="col-md-9 col-md-offset-3">
						<%= f.submit 'Sign Up', :class=> 'btn btn-primary btn-block' %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-9 col-md-offset-3">
						<center>OR</center>
					</div>
				</div>
				<div class="form-group">					
					<div class="col-md-9 col-md-offset-3">
						<a href="/auth/google_oauth2?redirect_path=student_home&amp;signup=true&amp;type=student", id="sign_in", class= 'btn btn-block btn-primary btn-google-plus'><i class="fa fa-google-plus"></i>  Sign up with Google</a>						
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-9 col-md-offset-3">
						<p>Already have an account?  <a href="/login">Log in</a></p>
					</div>
				</div>
			<% end %>
			
		</div>


	</div>

  <div class="form-signin">
  		<div class="signin-div">
  	    
	    </div>

   </div>

</div> <!-- /container -->