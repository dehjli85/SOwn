<div class="container-fluid">

	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= form_for :teacher_user, url: '/teacher_users', html: {class: 'form-horizontal', method:'post'} do |f| %>

				<div class="form-group <%= !@teacher_user.errors[:first_name].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">First Name:</label>
					<div class="col-md-9">
						<%= f.text_field :first_name, {:class=>'form-control', placeholder: 'Jane', id: 'inputFirstName'} %>
						<% if @teacher_user.errors[:first_name] %>
              <% @teacher_user.errors[:first_name].each do |error| %>
                <label class="control-label" for="inputFirtstName">First Name <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				<div class="form-group <%= !@teacher_user.errors[:last_name].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">Last Name:</label>
					<div class="col-md-9">
						<%= f.text_field :last_name, {:class=>'form-control', placeholder: 'Doe', id: 'inputLastName'} %>
						<% if @teacher_user.errors[:last_name] %>
              <% @teacher_user.errors[:last_name].each do |error| %>
                <label class="control-label" for="inputLastName">Last Name <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				
				<div class="form-group <%= !@teacher_user.errors[:email].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">Email:</label>
					<div class="col-md-9">
						<%= f.email_field :email, {:class=>'form-control', placeholder: 'johndoe@example.com', id: 'inputEmail'} %>
						<% if @teacher_user.errors[:email] %>
              <% @teacher_user.errors[:email].each do |error| %>
                <label class="control-label" for="inputEmail">Email <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				<div class="form-group <%= !@teacher_user.errors[:password].empty? ? 'has-error' : '' %>">
					<label class="col-md-3 control-label">Password:</label>
					<div class="col-md-9">
						<%= f.password_field :password, {:class=>'form-control', placeholder: '*****', id: 'inputPassword'} %>
						<% if @teacher_user.errors[:password] %>
              <% @teacher_user.errors[:password].each do |error| %>
                <label class="control-label" for="inputPassword">Password <%= error %></label><br/>      
              <% end %>
            <% end %>
					</div>
				</div>
				<div class="form-group">					
					<div class="col-md-9 col-md-offset-3">
						<%= f.submit 'Sign Up', :class=> 'btn btn-primary btn-block' %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-9 col-md-offset-3">
						<center>OR</center>
					</div>
				</div>
				<div class="form-group">					
					<div class="col-md-9 col-md-offset-3">
						<a href="/auth/google_oauth2?redirect_path=teacher_home&amp;signup=true&amps;type=teacher", id="sign_in", class= 'btn btn-block btn-primary btn-google-plus'><i class="fa fa-google-plus"></i>  Sign up with Google</a>
					</div>
				</div>
			<% end %>
		</div>


	</div>

  <div class="form-signin">
  		<div class="signin-div">
  	    
	    </div>

   </div>

</div> <!-- /container -->