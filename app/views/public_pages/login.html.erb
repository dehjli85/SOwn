<div class="container">

	<% if flash[:error].eql?('post-login-with-oauth-credentials') %>
		<div class='alert alert-danger'>You're account was setup through Google Sign-In.  Please try log in through your Google account.</div>
  <% elsif flash[:error].eql?('invalid-credentials') %>
    <div class='alert alert-danger'>Invalid credentials.  Try logging in again.</div>  
  <% elsif flash[:error].eql?('invalid-google-account') %>
    <div class='alert alert-danger'>The Google account you tried to log in with has not been signed up yet.  Please <a href="/">sign up</a> with Google first.</div>    
	<% end %>
  
	<%= form_tag '/login_post', {:class=>'form-signin'} do |f| %>
  
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    <%= email_field_tag 'user[email]', '' ,{:class=>'form-control', placeholder:'Email address',:autofocus=>true} %>
    

    <label for="inputPassword" class="sr-only">Password</label>
    <%= password_field_tag 'user[password]', '' ,{:class=>'form-control', placeholder:'Password', } %>
    

    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

    <div style='text-align:center; margin-top:20px; margin-bottom:20px;'><b>OR</b></div>

    <a href="/auth/google_oauth2?login=true", id="sign_in", class= 'btn btn-block btn-primary btn-google-plus' style="padding: 10px 0px 10px 0px; height:43px;"><i class="fa fa-google-plus"></i>  Log In with Google</a>
	</div>
	<% end %>
  

  <div>
    
</div>


