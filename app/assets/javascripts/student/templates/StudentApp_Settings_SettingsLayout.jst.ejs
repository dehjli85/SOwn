<h3>Settings</h3>
<div class="row">
	<div class="col-md-12 col-sm-12">
		<form class="form-horizontal" ui-settings-form>
		  
		  <% if(teacher != null && student != null) { %>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-md-3 control-label">Default View:</label>
			    <div class="col-md-4">
			      <select class="form-control" name="default_view_student" ui-default-view-select>
			      	<option <%= !teacher.default_view_student ? 'selected="selected"' : '' %> value="false">Teacher</option>
			      	<option <%= teacher.default_view_student ? 'selected="selected"' : '' %> value="true">Student</option>
			      </select>
			    </div>
			  </div>		  
			  <div class="form-group">
			    <div class="col-md-offset-3 col-md-6">
			      <button type="submit" class="btn btn-primary btn-block">Save</button>
			    </div>
			  </div>
		  <% } %>

		  <% if (student != null) {%>
		  	<div class="form-group">
		    	<label for="localId" class="col-md-3 control-label">Student ID:</label>
		    	<div class="col-md-4">
		      	<input type="text" class="form-control" name="localId" value="<%= student.local_id%>">  
		    	</div>
		    	<div class="col-md-4">
		    		<i class="ion-help-circled icon-lg icon_theme" data-toggle="tooltip" data-placement="right" data-original-title="Your District/School ID. Allows your teacher to identify you."></i>
		    	</div>
		    </div>
		  <% } %>

		  <div class="form-group">
		  	<div class="col-md-4 col-md-offset-3">
		  		<button class="btn btn-primary" ui-save-button>Save</button>
		  	</div>
		  </div>

		</form>
	</div>
</div>