<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Change Password</h4>
  </div>
  <div class="modal-body">
  	<div ui-alert-div></div>
    <form class="form-horizontal" ui-password-form>

			<div class="form-group">
		    <label for="inputOldPassword" class="col-sm-12 col-md-3 control-label">Old Password:</label>
		    <div class="col-sm-12 col-md-9">
		      <input type="password" class="form-control" id="inputOldPassword" name="oldPassword" ui-old-password-input>
		    </div>
		  </div>

		  <div class="form-group">
		    <label for="inputNewPassword" class="col-sm-12 col-md-3 control-label">New Password:</label>
		    <div class="col-sm-12 col-md-9">
		      <input type="password" class="form-control" id="inputNewPassword" name="newPassword" ui-new-password-input>
		    </div>
		  </div>

		  <div class="form-group">
		    <label for="inputConfirmNewPassword" class="col-sm-12 col-md-3 control-label">Confirm New Password:</label>
		    <div class="col-sm-12 col-md-9">
		      <input type="password" class="form-control" id="inputConfirmNewPassword" name="confirmNewPassword" ui-confirm-password-input>
		    </div>
		  </div>

		 </form>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary" ui-update-button>Update</button>	        
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>	        
  </div>
</div>