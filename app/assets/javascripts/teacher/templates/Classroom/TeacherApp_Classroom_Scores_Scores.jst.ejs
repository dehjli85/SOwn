<% if(((searchTerm == null || searchTerm == "") && tagIds == null ) && (activities == null || activities.length == 0)){ %>
  <div class="alert alert-warning">
    You haven't assigned any activities for your students to work on yet!  Get started by clicking the "Activities" link on the left or the "Edit Activites" link above!
  </div>
<% }else{ %>
  <form ui-activities-header-form>
    <table id="perf_table" class="table table-condensed table-bordered small scores-table" style="table-layout:fixed; width:inherit; padding-top:10px;">
      <thead>
        
        <tr>
          <th class="scores-table__th_students" ui-student-header>Students</th>
          <th class="scores-table__th_activity scores-table__th_activity_left-right-bordered">
            <div class="scores-table__due-date scores-table__due-date_label">
              Due Date:
            </div>
            <div class="scores-table scores-table__activity" ui-mastery-header>
              % At Mastery
            </div>
          </th>
          <% for(var i = 0; i < activities.length; i++){ %>
              <th name="<%= activities[i].classroom_activity_pairing_id %>" class="scores-table__th_activity draggable " >
                <div class="scores-table__due-date">
                  <%= activities[i].due_date ?  moment(activities[i].due_date).format("MM/DD") : "" %>  
                </div>
                <div id="header_<%= i %>" class="scores-table scores-table__activity activity">
                  <%= activities[i].name %>
                </div>
              </th>             
          <% } %>
          
        </tr>
      </thead>
      <tbody>    

      </tbody>
    </table>
  </form>

  <% if(collectionSize == null || collectionSize == 0){ %> 
    <div class="alert alert-warning">
      No students have joined your classroom yet.  When they log in, have them use classroom code &quot;<b><%= classroom.classroom_code %></b>&quot; to join this class!
    </div>
  <% } %>

<% } %>