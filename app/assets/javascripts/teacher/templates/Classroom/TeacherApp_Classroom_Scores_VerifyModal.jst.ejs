<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h5 class="modal-title" id="myModalLabel" ui-title>Verify performance for <b><%= student.display_name %></b></h5>
  </div>
  <div class="modal-body" ui-body-div>
    
    <form class="form-horizontal" ui-verify-form>
      <input id="student_performance_verified" name="student_performance[verified]" type="hidden" value="true">
      <input id="student_performance_id" name="student_performance_id" type="hidden" value="<%= student_performance.id%>">

      <div class="form-group">
        <% if(activity.activity_type == 'scored'){ %>
          <label for="inputScoredPerformance" class="col-sm-4 control-label">Score:</label>
        <% }else if(activity.activity_type == 'completion'){ %>
          <label for="inputCompletedPerformance" class="col-sm-4 control-label">Completed:</label>
        <% } %>    
        <div class="col-sm-8">
          <label class='form-label'><%= student_performance.performance_pretty %> </label>           
        </div>
      </div>        

      <div class="form-group">
        <label for="inputPerformanceDate" class="col-sm-4 control-label">Date:</label>
        <div class="col-sm-8">
          
          <label class='form-label'><%= moment(student_performance.performance_date, "YYYY-MM-DD HH:mm:ss").format("MM/DD/YY") %> </label>           
        </div>
      </div>
      
    </form>
  </div>
  <div class="modal-footer" ui-footer-div>
    <button type="button" class="btn btn-primary" data-dismiss="modal" ui-verify-button>Verify</button>          
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>	        
  </div>
</div>
