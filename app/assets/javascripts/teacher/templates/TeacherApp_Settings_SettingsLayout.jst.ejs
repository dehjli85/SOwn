<h3>Settings</h3>
<div class="row">
	<div class="col-md-12 col-sm-12">
		<form class="form-horizontal" ui-settings-form>

			<div class="form-group">
		    <label for="inputEmail" class="col-sm-12 col-md-3 control-label">Email:</label>
		    <div class="col-sm-12 col-md-9">
		      <input type="text" class="form-control" id="inputEmail" name="teacher_user[email]" value="<%= teacher.email %>" <%= teacher.provider == null ? '' : 'disabled' %>>
		  	</div>
		  </div>

			<div class="form-group">
		    <label for="inputSalutation" class="col-sm-12 col-md-3 control-label">Salutation:</label>
		    <div class="col-sm-12 col-md-9">
		    	<select class="form-control" name="teacher_user[salutation]">
		    		<option></option>
		    		<option <%= teacher.salutation == 'Ms.' ? 'selected="selected"' : '' %>>Ms.</option>
		    		<option <%= teacher.salutation == 'Mr.' ? 'selected="selected"' : '' %>>Mr.</option>
		    		<option <%= teacher.salutation == 'Mrs.' ? 'selected="selected"' : '' %>>Mrs.</option>
		    		<option <%= teacher.salutation == 'Dr.' ? 'selected="selected"' : '' %>>Dr.</option>
		    	</select>
		    </div>
		  </div>
			
			<div class="form-group">
		    <label for="inputFirstName" class="col-sm-12 col-md-3 control-label">First Name:</label>
		    <div class="col-sm-12 col-md-9">
		      <input type="text" class="form-control" id="inputFirstName" name="teacher_user[first_name]" value="<%= teacher.first_name %>">
		    </div>
		  </div>
		  
		  <div class="form-group">
		    <label for="inputLastName" class="col-sm-12 col-md-3 control-label">Last Name:</label>
		    <div class="col-sm-12 col-md-9">
		      <input type="text" class="form-control" id="inputLastName" name="teacher_user[last_name]" value="<%= teacher.last_name %>">
		    </div>
		  </div>
		  
		  <div class="form-group">
		    <label for="inputGender" class="col-sm-12 col-md-3 control-label">Gender:</label>
		    <div class="col-sm-12 col-md-9">
		    	<select class="form-control" name="teacher_user[gender]">
		    		<option></option>
		    		<option <%= teacher.gender == 'F' ? 'selected="selected"' : '' %> >F</option>
		    		<option <%= teacher.gender == 'M' ? 'selected="selected"' : '' %> >M</option>
		    	</select>
		  	</div>
		  </div>
		  
		  <% if(teacher != null && student != null) { %>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-md-3 control-label">Default View:</label>
			    <div class="col-md-4">
			      <select class="form-control" name="teacher_user[default_view_student]" ui-default-view-select>
			      	<option <%= !teacher.default_view_student ? 'selected="selected"' : '' %> value="false">Teacher</option>
			      	<option <%= teacher.default_view_student ? 'selected="selected"' : '' %> value="true">Student</option>
			      </select>
			    </div>
			  </div>		  			  
		  <% } %>

		  <% if (teacher.provider == null) {%>
		  	<div class="form-group">
		    	<div class="col-md-4 col-md-offset-3">
		    		<a href="#" ui-change-password-link>Change Password</a>
		    	</div>
		    </div>
		    <div class="form-group">
		    	<div class="col-md-8 col-md-offset-3">
		    		<a href="#" ui-convert-stg-link>Convert to Google Account</a>
		    		<i class="ion-help-circled icon-lg icon_theme" data-toggle="tooltip" data-placement="right" data-original-title="You log in with an email and password. Click here to configure your account to sign in with Google."></i>
		    	</div>
		    </div>
		  <% } %>

		  <% if (teacher.provider != null) {%>
		  	<div class="form-group">
		    	<div class="col-md-8 col-md-offset-3">
		    		<a href="#" ui-convert-stg-link>Convert to Standard Account</a>
		    		<i class="ion-help-circled icon-lg icon_theme" data-toggle="tooltip" data-placement="right" data-original-title="Your account uses Google Sign-In. Click here to unlink from Google."></i>
		    	</div>
		    </div>
		  <% } %>

		  <div class="form-group">
				<div class="col-sm-12 col-md-9 col-md-offset-3">
					<a href="#" class="btn btn-primary btn-block" ui-save-button>Save</a>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12 col-md-9 col-md-offset-3">
					<a href="#" class="btn btn-danger btn-block" ui-delete-account-link>Delete Account</a>
				</div>
			</div>


		</form>
	</div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" ui-modal-div>

</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" ui-modal-div>
	<div role="document" class="modal-dialog">
		<div class="modal-content">
		  <div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		    <h5 class="modal-title" id="myModalLabel" ui-title>Confirm account deletion:</h5>
		  </div>
		  <div class="modal-body" ui-body-div>
		    <p><b>Are you sure you want to delete your account?</b>  All of your data will be deleted and you will not be able to recover it.</p>
		    
		  </div>
		  <div class="modal-footer" ui-footer-div>
		    <button type="button" class="btn btn-danger" ui-delete-button>Delete</button>          
		    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>	        
		  </div>
		</div>
	</div>
</div>

